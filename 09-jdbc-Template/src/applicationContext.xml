    <!-- 注册Dao -->
    <bean id="studentDao" class="com.swroom.dao.StudentDaoImpl">
        <property name="dataSource" ref="myDataSource"/>
    </bean>

    <!-- 注册service-->
    <bean id="studentService" class="com.swroom.service.StudentServiceImpl">
        <property name="dao" ref="studentDao"/>
    </bean>


</beans>